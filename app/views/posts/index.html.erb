<div class='row'>
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag post.picture.url(:medium) %> 
          <div class="caption">
            <h3><%= post.description %></h3>
            <p>
              <% post.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </p>
            <p>
              <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-danger' %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    No posts added
  <% end %>
</div>